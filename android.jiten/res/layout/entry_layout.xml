<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<ListView android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/entryList"></ListView>
		<TextView android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:background="@drawable/separator_gradient"
			android:paddingLeft="5dp" android:id="@+id/readingSeparator" android:text="Reading(s)"></TextView>
		<ListView android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/readingList"></ListView>
		<TextView android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:background="@drawable/separator_gradient"
			android:paddingLeft="5dp" android:id="@+id/meaningSeparator" android:text="Meaning(s)"></TextView>
		<ListView android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/meaningList"></ListView>
		<TextView android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:background="@drawable/separator_gradient"
			android:paddingLeft="5dp" android:id="@+id/exampleSeparator" android:text="Example(s)"></TextView>
		<ListView android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/exampleList"></ListView>
	</LinearLayout>
</ScrollView>
