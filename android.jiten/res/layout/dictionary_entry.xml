<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/entry_expression"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="例えば"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/entry_reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/entry_expression"
            android:layout_centerHorizontal="true"
            android:text="たとえば"
            android:textColor="@android:color/darker_gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/entry_separator_translation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/entry_reading"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:text="@string/translations"
            android:textStyle="bold" />

        <View
            android:id="@+id/entry_separator_line_translation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/entry_separator_translation"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/separator_gradient"
            android:minHeight="2dp" />

        <LinearLayout
            android:id="@+id/entry_translations"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/entry_separator_line_translation"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" />
    </RelativeLayout>

</ScrollView>