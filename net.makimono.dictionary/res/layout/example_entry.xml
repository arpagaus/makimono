<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <net.makimono.dictionary.view.TextView
            android:id="@+id/japanese_sentence"
            style="@style/EntryMainExpression"
            android:layout_marginBottom="20dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/separator_meanings"
            style="@style/SeparatorText"
            android:layout_below="@id/japanese_sentence"
            android:text="@string/meanings" />

        <View
            android:id="@+id/separator_line_meanings"
            style="@style/SeparatorLine"
            android:layout_below="@id/separator_meanings" />

        <LinearLayout
            android:id="@+id/meanings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator_meanings"
            android:layout_marginTop="8dp"
            android:orientation="vertical" />
    </RelativeLayout>

</ScrollView>